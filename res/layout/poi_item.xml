<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="wrap_content"
              android:layout_width="fill_parent" android:orientation="vertical">
    <TextView android:id="@+id/name" android:layout_width="fill_parent" android:layout_height="wrap_content"
              android:textStyle="bold" android:textSize="20sp"/>
    <TextView android:id="@+id/desc" android:layout_width="fill_parent" android:layout_height="wrap_content"
              android:textStyle="italic"/>
    <Button android:id="@+id/play" android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Play audio" android:paddingTop="10dip"/>
</LinearLayout>